<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/edittext_rounded_corners.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="-3dp"
        android:right="-3dp"
        android:left="-3dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="@color/dark_blue"
                android:centerColor="@color/logo_blue"
                android:endColor="@color/top_blue"/>

            <!--<stroke
                android:width="1dp"
                android:color="@color/logo_orange" />-->

            <corners
                android:radius="0dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="0dp"
                />
        </shape>
    </item>

</layer-list>