<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:textStyle="normal"
        android:id="@+id/textViewtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/label"
        android:textColor="@color/icon_orange"
        android:textSize="12sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:text="@string/title" />

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:targetApi="lollipop"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/aMr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1.4"
            android:background="@drawable/choicebackselected"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textStyle="normal"
                android:id="@+id/option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="@string/mr"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/aimg"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/choicebtn_selected"
                    android:contentDescription="@string/mr" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bMrs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1.4"
            android:background="@drawable/choiceback"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="@string/mrs"
                android:textColor="@color/light_grey"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bimg"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/choicebtn_unselected"
                    android:contentDescription="@string/mrs" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cMiss"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1.4"
            android:background="@drawable/choiceback"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="@string/miss"
                android:textColor="@color/light_grey"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cimg"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/choicebtn_unselected"
                    android:contentDescription="@string/miss"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dOther"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1.5"
            android:background="@drawable/choiceback"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="@string/others"
                android:textColor="@color/light_grey"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgd"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/choicebtn_unselected"
                    android:contentDescription="@string/others"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:visibility="gone"
        android:id="@+id/otherEditText"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:background="@null"
        android:importantForAutofill="no"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/grey"
        android:textSize="15sp"
        android:inputType="textCapWords"
        android:hint="@string/doctor_honourable_e_t_c"/>

</LinearLayout>
