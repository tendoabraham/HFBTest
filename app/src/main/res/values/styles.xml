<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme_I" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/customTransition</item>
        <item name="android:fontFamily">@string/default_font</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_orange</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowTheme</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="customBackground">@color/transparent</item>
        <item name="customText">@color/icon_blue</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_orange</item>
    </style>
    <style name="TextAppearanceBold" parent="@android:style/TextAppearance.Small">
        
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyDrawerArrowTheme" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="customTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>


    <style name="Theme_II" parent="Theme_I">
        <item name="customBackground">@color/white</item>
        <item name="customText">@color/icon_blue</item>
    </style>

    <style name="Theme_III" parent="Theme_I">
        <item name="customBackground">@color/logo_orange</item>
        <item name="customText">@color/icon_blue</item>
    </style>

    <style name="Theme_IV" parent="Theme_I">
        <item name="customBackground">@color/lightest_blue</item>
        <item name="customText">@color/icon_blue</item>
    </style>

    <style name="Theme_V" parent="Theme_I">
        <item name="customBackground">@color/light_grey</item>
        <item name="customText">@color/icon_blue</item>
    </style>

    <style name="Theme_VI" parent="Theme_I">
        <item name="customBackground">@color/orange</item>
        <item name="customText">@color/icon_blue</item>
    </style>

    <style name="Theme_VII" parent="Theme_I">
        <item name="customBackground">@color/blue</item>
        <item name="customText">@color/white</item>
    </style>

    <style name="Header_Text" parent="Theme_I">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Toolbar_Text" parent="Theme_I">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Spinner_Text" parent="Theme_I">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bckgrd_text_fields</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Edit_Text" parent="Theme_I">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bckgrd_text_fields</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Dark_Grey_Text_Center" parent="Theme_I">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Blue_Text_Center" parent="Theme_I">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="Button" parent="AppTheme">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/back_button_no_stroke</item>
        <item name="android:elevation" tools:targetApi="lollipop">5dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Blue_Text_Center_two" parent="Theme_I">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="White_Text_Center" parent="Theme_I">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Orange_Text_Center" parent="Theme_I">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_orange</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Blue_Text" parent="Theme_I">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/w_icon_blue</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="White_Text" parent="Theme_I">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Orange_Text" parent="Theme_I">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/dark_orange</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Black_Text" parent="Theme_I">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button_Yes" parent="Theme_I">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bckgrd_button_yes</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button_No" parent="Theme_I">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bckgrd_button_no</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/icon_blue</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
