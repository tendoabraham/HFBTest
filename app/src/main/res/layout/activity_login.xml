<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

   <ImageView
        android:id="@+id/hfbBuild"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.35"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/background"
        android:contentDescription="@string/app_name"/>

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end|center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:src="@drawable/housing_finance_logo"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/Blue_Text"
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="@string/housing"/>

            <TextView
                style="@style/Blue_Text"
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="@string/finance"/>

            <TextView
                style="@style/Blue_Text"
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="@string/bank"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/loginLayout"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/fingerInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@null"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fingerprint_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_fp_40px"
                    android:contentDescription="@string/description_fingerprint_icon"/>

                <TextView
                    android:id="@+id/fingerprint_status"
                    style="@style/Blue_Text_Center"
                    android:padding="5dp"
                    android:textColor="@color/w_icon_blue"
                    android:textStyle="bold"
                    android:text="@string/fingerprint_hint"/>

            </LinearLayout>

            <TextView
                style="@style/Blue_Text_Center"
                android:paddingTop="8dp"
                android:paddingStart="9dp"
                android:paddingEnd="9dp"
                android:textColor="@color/w_icon_blue"
                android:textStyle="bold"
                android:text="@string/orW"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/eTPin"
            style="@style/Edit_Text"
            android:longClickable="false"
            android:inputType="numberPassword"
            android:hint="@string/enter_L_Pin"/>

        <TextView
            android:id="@+id/loginBn"
            style="@style/Button_Yes"
            android:onClick="LoginPage"
            android:text="@string/login" />

        <TextView
            android:id="@+id/backBn"
            style="@style/Button_No"
            android:onClick="LoginPage"
            android:text="@string/back"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/contactUs"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/bckgrd_sections"
                android:gravity="center"
                android:onClick="LoginPage"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/contact_us"
                    tools:ignore="ContentDescription"
                    app:tint="@color/icon_orange" />

                <TextView
                    style="@style/White_Text_Center"
                    android:text="@string/contactUs" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/toLogin"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/bckgrd_sections"
                android:gravity="center"
                android:onClick="LoginPage"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/login_btn"
                    tools:ignore="ContentDescription"
                    app:tint="@color/icon_orange" />

                <TextView
                    style="@style/White_Text_Center"
                    android:text="@string/login"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/branches"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/bckgrd_sections"
                android:gravity="center"
                android:onClick="LoginPage"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/branch_locations"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/White_Text_Center"
                    android:text="@string/branches"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/atmLocations"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/bckgrd_sections"
                android:gravity="center"
                android:onClick="LoginPage"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/atm_machine"
                    tools:ignore="ContentDescription"
                    app:tint="@color/icon_orange" />

                <TextView
                    style="@style/White_Text_Center"
                    android:text="@string/atmLocations" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/agent_locations"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/bckgrd_sections"
                android:gravity="center"
                android:onClick="LoginPage"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/withdraw"
                    app:tint="@color/icon_orange"
                    android:contentDescription="@string/agents" />

                <TextView
                    style="@style/White_Text_Center"
                    android:text="@string/agents"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_opening"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/bckgrd_sections"
                android:gravity="center"
                android:onClick="LoginPage"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/open_account"
                    tools:ignore="ContentDescription"
                    app:tint="@color/icon_orange" />

                <TextView
                    style="@style/White_Text_Center"
                    android:text="@string/account_opening" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
