<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/politicallyexposed"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="italic"
                android:textSize="15sp"
                android:textColor="@color/green"
                android:text="@string/pepDefinition"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="@string/isPoliticallyExposed"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/PEGroup">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="@color/dark_blue"
                android:text="Yes"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:id="@+id/yesPE"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="@color/dark_blue"
                android:text="No"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:id="@+id/noPE"/>


        </RadioGroup>

        <TextView
            android:visibility="gone"
            android:textStyle="bold"
            android:id="@+id/isFamPE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
            android:text="@string/isFamPoliticallyExposed"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />


        <RadioGroup
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/FPEGroup">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="@color/dark_blue"
                android:text="Yes"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:id="@+id/yesFPE"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="@color/colorPrimary"
                android:text="No"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:id="@+id/noFPE"/>

        </RadioGroup>

        <LinearLayout
            android:id="@+id/PEPDet"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:visibility="gone"
                android:textStyle="bold"
                android:id="@+id/textViewPEP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="left"
                android:text="@string/politicallyExposedDetails"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/centepoliticallyexposedinfo"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/pepPositionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/pepPositionTxt"/>

            <Spinner
                android:id="@+id/pepPositionSpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:minHeight="48dp" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/otherPosition"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/pepRelationshipTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/pepRelationshipTxt"/>

            <Spinner
                android:visibility="gone"
                android:id="@+id/pepRelationshipSpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:minHeight="48dp" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/otherRelationship"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/pepDetailsTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/pepTitle"/>

            <LinearLayout
                android:id="@+id/pepDetails"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/pepDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/pepDuration"/>

            <LinearLayout
                android:id="@+id/pepPeriod"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>