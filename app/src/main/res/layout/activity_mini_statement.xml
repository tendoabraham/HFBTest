<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/customBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/toolbar_layout" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:background="@drawable/bckgrd_screen"
            android:orientation="vertical"
            tools:targetApi="lollipop">

            <TextView
                style="@style/Black_Text"
                android:text="@string/selectAccount" />

            <Spinner
                android:id="@+id/accountNumber"
                style="@style/Spinner_Text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/accountInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bckgrd_sections"
                android:layout_margin="10sp"
                android:padding="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1.1"
                    android:text="@string/dateTXT"/>

                <TextView
                    android:id="@+id/particulars"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:textStyle="italic"
                    android:textAllCaps="true"
                    android:text="@string/narration"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="@string/type"/>

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:text="@string/amount"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_mini_statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

