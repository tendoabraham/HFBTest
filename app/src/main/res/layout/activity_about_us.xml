<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/customBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bckgrd_header"
            app:titleTextAppearance="@style/Toolbar_Text"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                style="@style/Blue_Text_Center"
                android:gravity="fill"
                android:background="@drawable/bckgrd_screen"
                android:padding="10dp"
                android:elevation="10dp"
                android:text="@string/about_text"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/appVersion"
                android:layout_margin="10dp"
                style="@style/Blue_Text_Center"
                android:textColor="?attr/customText"/>

            <TextView
                android:layout_margin="10dp"
                style="@style/Button_Yes"
                android:layout_width="250dp"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:onClick="webCS"
                android:text="@string/poweredBy"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

